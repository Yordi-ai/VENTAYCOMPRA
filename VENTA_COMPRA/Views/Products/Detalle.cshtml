@model Product

<div class="container-fluid">
    <!-- Usa container-fluid para que la tarjeta ocupe más ancho -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Ajusta el ancho de la columna para que sea más ancha -->
            <div class="card shadow-lg">
                <div class="row g-0">
                    <!-- Imagen -->
                    <div class="col-md-6">
                        <!-- Ajusta la proporción de la imagen -->
                        <img src="/products/@Model.ImageFileName" class="img-fluid rounded-start product-img" alt="@Model.NombreAuto" />
                    </div>
                    <!-- Contenido de la tarjeta -->
                    <div class="col-md-6">
                        <!-- Ajusta la proporción del contenido -->
                        <div class="card-body">
                            <!-- Título y precio -->
                            <h3 class="card-title">@Model.NombreAuto</h3>
                            <h4 class="card-text text-primary">$@Model.Precio (S/ @Model.Precio * 3.759)</h4> <!-- Conversión aproximada -->

                            <hr />
                            <!-- Resumen -->
                            <h5 class="mb-3">Resumen</h5>
                            <div class="row">
                                <div class="col-6">
                                    <p class="card-text"><strong>Kilómetros:</strong> @Model.Kilometros</p>
                                    <p class="card-text"><strong>Motor:</strong> @Model.Motor</p>
                                    <p class="card-text"><strong>Año Modelo:</strong> @Model.AñoModelo</p>
                                    <p class="card-text"><strong>Tipo:</strong> @Model.Tipo</p>
                                </div>
                                <div class="col-6">
                                    <p class="card-text"><strong>Combustible:</strong> @Model.Combustible</p>
                                    <p class="card-text"><strong>Color:</strong> @Model.Color</p>
                                    <p class="card-text"><strong>Transmisión:</strong> @Model.Transmision</p>
                                    <p class="card-text"><strong>Puertas:</strong> @Model.Puertas</p>
                                </div>
                            </div>
                            <hr />
                            <!-- Descripción -->
                            <h5 class="mb-3">Descripción</h5>
                            <p class="card-text">@Model.Descripcion</p>
                            <p class="card-text"><strong>Fecha de Venta:</strong> @Model.CreateAt.ToShortDateString()</p>

                            <!-- Botón de acción -->
                            <div class="text-end">
                                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Volver a la lista</a>
                                <!-- Botón para abrir el modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#contactModal">
                                    Cotizar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">Cotiza tu Auto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Campos del formulario similar a la imagen -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fullName" class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Nombre Completo">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="dni" class="form-label">DNI</label>
                            <input type="text" class="form-control" id="dni" placeholder="DNI">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="document" class="form-label">N° Documento</label>
                            <input type="text" class="form-control" id="document" placeholder="N° Documento">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="mobile" class="form-label">Móvil</label>
                            <input type="text" class="form-control" id="mobile" placeholder="Móvil">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">N° Teléfono</label>
                            <input type="text" class="form-control" id="phone" placeholder="N° Teléfono">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email">
                        </div>

                        <!-- Resto de los campos del formulario -->
                        <!-- Agrega aquí los otros campos según sea necesario -->

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="terms1">
                            <label class="form-check-label" for="terms1">He leído y acepto los términos y condiciones de la política de privacidad vigente.</label>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="terms2">
                            <label class="form-check-label" for="terms2">Acepto recibir información sobre productos y servicios.</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
            </div>
        </div>
    </div>
</div>

<!-- Agrega Bootstrap al proyecto -->
